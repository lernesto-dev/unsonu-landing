---
interface Props {
  title: string;
  description: string;
  price: string;
  limit: number;
  accounts: number;
  icon: string;
}

const { title, description, price, limit, accounts, icon } = Astro.props;
---

<div
  class="w-[294px] h-[192px] border mx-auto flex flex-col justify-between rounded-2xl mb-5"
>
  <div class="mt-5 mx-5 flex justify-between items-start">
    <div class="w-[80%]">
      <h3 class="text-xl font-semibold text-blue-2">{title}</h3>
      <p class="text-xs text-blue-2">{description}</p>
      <span class="text-xs text-blue-2 font-bold">{price}</span>
    </div>
    <img src=`/assets/${icon}.svg` alt="cohete" width="32px" />
  </div>
  <div class="flex justify-between items-end w-full">
    <img src="/assets/plans.svg" alt="" width="72px" />
    <div class="pb-2 pr-3 flex gap-2">
      <div class="w-[1px] h-[50px] border bg-blue-2"></div>
      <div class="flex-1 flex flex-col justify-around">
        <div class="flex gap-1">
          <img src="assets/check.svg" alt="icon check" />
          <p class="text-blue-2 text-xs">{limit} GB de trafico de datos</p>
        </div>
        <div class="flex gap-1">
          <img src="assets/check.svg" alt="icon check" />
          <p class="text-blue-2 text-xs">Soporte para {accounts} cuentas</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  h3,
  p,
  span {
    font-family: "Encode Sans Expanded", sans-serif;
  }
</style>
