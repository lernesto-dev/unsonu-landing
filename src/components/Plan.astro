---
interface Props {
  title: string;
  description: string;
  price: string;
  limit: number;
  accounts: number;
  icon: string;
}

const { title, description, price, limit, accounts, icon } = Astro.props;
---

<a
  href=`https://app.unsonu.com/setings?plan=${title}`
  class="w-[294px] h-[192px] border mx-auto flex flex-col justify-between rounded-2xl mb-5 slit-in-vertical md:w-[558px] md:h-[339px] md:rounded-3xl md:max-w-[45%] color-text"
>
  <div class="mt-5 mx-5 flex justify-between items-start">
    <div class="w-[80%]">
      <h3 class="text-xl font-semibold text-blue-2 md:text-4xl">{title}</h3>
      <p class="text-xs text-blue-2 md:text-xl md:mt-6 md:mb-2">{description}</p>
      <span class="text-xs text-blue-2 font-bold md:text-xl">{price}</span>
    </div>
    <img src=`/assets/${icon}.svg` alt="cohete" width="32px" class="md:w-[50px]"/>
  </div>
  <div class="flex justify-between items-end w-full">
    <img src="/assets/plans.svg" alt="" width="72px" class="md:w-[154px]"/>
    <div class="pb-2 pr-3 flex gap-2 md:pb-4">
      <div class="w-[1px] h-[50px] md:h-[100px] divider-vertical"></div>
      <div class="flex-1 flex flex-col justify-around">
        <div class="flex gap-1">
          <img src="assets/check.svg" alt="icon check" class="md:w-[20px] md:mx-1"/>
          <p class="text-blue-2 text-xs md:text-xl">{limit} GB de trafico de datos</p>
        </div>
        <div class="flex gap-1">
          <img src="assets/check.svg" alt="icon check" class="md:w-[20px] md:mx-1"/>
          <p class="text-blue-2 text-xs md:text-xl">Soporte para {accounts} cuentas</p>
        </div>
      </div>
    </div>
  </div>
</a>

<style>
  h3,
  p,
  span {
    font-family: "Encode Sans Expanded", sans-serif;
    color: #232121;
  }
  .slit-in-vertical {
    view-timeline-name: --plans;
    view-timeline-axis: block;
    -webkit-animation: slit-in-vertical 0.45s ease-out both;
    animation: slit-in-vertical 0.45s ease-out both;
    animation-timeline: --plans;
  }
  .divider-vertical {
    background-color: #4B4848 !important;
  }
  .color-text {
    border-color: #4B4848 !important;
  }
  @-webkit-keyframes slit-in-vertical {
    0% {
      -webkit-transform: translateZ(-800px) rotateY(90deg);
      transform: translateZ(-800px) rotateY(90deg);
      opacity: 0;
    }
    15% {
      -webkit-transform: translateZ(-160px) rotateY(87deg);
      transform: translateZ(-160px) rotateY(87deg);
      opacity: 1;
    }
    38% {
      -webkit-transform: translateZ(0) rotateY(0);
      transform: translateZ(0) rotateY(0);
    }
  }
  @keyframes slit-in-vertical {
    0% {
      -webkit-transform: translateZ(-800px) rotateY(90deg);
      transform: translateZ(-800px) rotateY(90deg);
      opacity: 0;
    }
    15% {
      -webkit-transform: translateZ(-160px) rotateY(87deg);
      transform: translateZ(-160px) rotateY(87deg);
      opacity: 1;
    }
    38% {
      -webkit-transform: translateZ(0) rotateY(0);
      transform: translateZ(0) rotateY(0);
    }
  }
</style>
