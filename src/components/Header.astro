<header
  class="flex justify-between items-center bg-blue-1 h-14 md:h-24 px-3 shadow-[0px_2px_11px_rgba(0,0,0,1)] fixed w-full z-10"
>
  <a class="text-2xl text-blue-2 md:text-5xl " href="/">UNSONU</a>
  <svg
    id="openMenu"
    class="cursor-pointer md:hidden"
    width="18"
    height="21"
    viewBox="0 0 18 21"
    fill="#F2F9F9"
  >
    <path
      d="M0 0H18V3.35727H0V0ZM0 8.39316H18V11.7504H0V8.39316ZM0 16.7863H18V20.1436H0V16.7863Z"
      fill="#F2F9F9"></path>
  </svg>
  <nav
    id="navigationContainer"
    class="mobile flex flex-col-reverse text-2xl gap-8 text-center md:flex-row md:text-white md:items-center"
  >
    <button class="absolute top-0 right-0 pr-6 pt-6 md:hidden" id="closeMenu">X</button>
    <ol class="flex flex-col gap-8 md:flex-row">
      <li><a id="btnStart" href="">inicio</a></li>
      <li><a id="btnFunctions" href="">Funciones</a></li>
      <li><a id="btnPlans" href="">Planes</a></li>
    </ol>
    <a
      href="https://app.unsonu.com/login"
      class="bg-blue-3 py-3 px-4 rounded-md">Iniciar sesi√≥n</a
    >
  </nav>
</header>

<script>
  const openMenu = () => {
    document.querySelector("body").style.overflowY = "hidden";
    const container = document.getElementById("navigationContainer");
    container.classList.remove("close");
    container.classList.add("open");
  };
  const closeMenu = () => {
    document.querySelector("body").style.overflowY = "scroll";
    const container = document.getElementById("navigationContainer");
    container.classList.remove("open");
    container.classList.add("close");
  };
  const scrollSmooth = (id) => {
    const seccion = document.getElementById(id);
    const navigation = document.getElementById("navigationContainer");

    if (navigation.classList.contains("open")) {
      closeMenu();
    }
    seccion.scrollIntoView({
      behavior: "smooth",
    });
  };
  document.getElementById("openMenu").onclick = openMenu;
  document.getElementById("closeMenu").onclick = closeMenu;
  document.getElementById("btnStart").onclick = (event) => {
    event.preventDefault();
    scrollSmooth("start");
  };
  document.getElementById("btnFunctions").onclick = (event) => {
    event.preventDefault();
    scrollSmooth("functions");
  };
  document.getElementById("btnPlans").onclick = (event) => {
    event.preventDefault();
    scrollSmooth("plans");
  };
</script>

<style>
  a,
  button {
    font-family: "Dangrek", monospace, sans-serif;
  }
  @media (min-width: 768px) {
    nav a {
      font-family: "Encode Sans Expanded", sans-serif;
    }
  }
  @media (max-width: 768px) {
    .mobile {
      background-color: #1a2c32;
      position: absolute;
      top: 0px;
      left: 0px;
      width: 100%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #f2f9f9;
      transform: translateY(-100%);
    }
    .open {
      animation: open 1s both;
    }
    .close {
      animation: close 1s both;
    }
    @keyframes open {
      from {
        transform: translateY(-100%);
      }
      to {
        transform: translateY(0px);
      }
    }
    @keyframes close {
      from {
        transform: translateY(0px);
      }
      to {
        transform: translateY(-100%);
      }
    }
  }
</style>
